# Reference: <https://postmarketos.org/deviceinfo>
# Please use double quotes only. You can source this file in shell
# scripts.

deviceinfo_format_version="0"
deviceinfo_name="Google Pixel 7"
deviceinfo_manufacturer="Google"
deviceinfo_codename="google-panther"
deviceinfo_year="2022"
# deviceinfo_dtb specifies the path to the DTB file relative to /boot/dtbs/<kernel_pkgname>/
# For the stock kernel, it's google/gs201-panther.dtb in /boot/dtbs/linux-postmarketos-google-gs201/
# For GrapheneOS kernel, DTBs are expected in /boot/dtbs/linux-grapheneos-panther/
# We create a symlink to ensure google/gs201-panther.dtb exists in the DTB directory
deviceinfo_dtb="google/gs201-panther"
deviceinfo_append_dtb="true"
deviceinfo_arch="aarch64"

# Device related
deviceinfo_gpu_accelerated="true"
deviceinfo_chassis="handset"
deviceinfo_keyboard="false"
deviceinfo_external_storage="false"
deviceinfo_screen_width="1080"
deviceinfo_screen_height="2400"
deviceinfo_getty="ttyS0;115200"

# Bootloader related
deviceinfo_flash_method="fastboot"
deviceinfo_kernel_cmdline="console=ttyS0,115200 androidboot.console=ttyS0"
deviceinfo_generate_bootimg="true"
deviceinfo_bootimg_qcdt="false"
deviceinfo_bootimg_dtb_second="false"
deviceinfo_flash_pagesize="4096"
deviceinfo_flash_offset_base="0x00000000"
deviceinfo_flash_offset_kernel="0x00008000"
deviceinfo_flash_offset_ramdisk="0x01000000"
deviceinfo_flash_offset_second="0x00000000"
deviceinfo_flash_offset_tags="0x00000100"
deviceinfo_header_version="4"
deviceinfo_flash_sparse="true"

# Required for devices using UFS as storage (instead of e.g. eMMC)
deviceinfo_rootfs_image_sector_size="4096"

# Additional features
deviceinfo_flash_kernel_on_update="true"

# Google Inc. Nexus/Pixel Device (fastboot)
deviceinfo_usb_idVendor="0x18d1"
deviceinfo_usb_idProduct="0x4ee1"

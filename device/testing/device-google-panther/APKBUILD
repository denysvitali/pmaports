pkgname=device-google-panther
pkgdesc="Google Pixel 7"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	mkbootimg
	postmarketos-base
"
makedepends="devicepkg-dev"
subpackages="
	$pkgname-kernel-google-panther-downstream:kernel_google_panther_downstream
"
source="
	deviceinfo
	modules-initfs
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

kernel_google_panther_downstream() {
	pkgdesc="LineageOS downstream kernel for Google Pixel 7 (panther)"
	depends="linux-google-panther-downstream"
	devicepkg_subpackage_kernel $startdir $pkgname $subpkgname
}

